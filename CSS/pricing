    }
    
}


/* ========================================
   HOVER STATES – Desktop only
   ======================================== */

@media (hover: hover) and (pointer: fine) {
    
    .pricing-card {
        position: relative;
    }
    
    /* Subtle line animation */
    .pricing-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 0;
        height: 1px;
        background: var(--color-text);
        transition: width 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }
    
    .pricing-card:hover::before {
        width: 100%;
    }
    
}


