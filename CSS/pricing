    .pricing-extras__grid {
        grid-template-columns: 1fr;
        gap: var(--space-md);
    }
    
    .extras-card {
        padding: var(--space-lg);
    }
    
}

@media (max-width: 768px) {
    
    /* Header */
    .pricing-header {
        min-height: 40vh;
        padding-top: calc(var(--space-xl) + 80px);
    }
    
    /* Pricing card – stack layout */
    .pricing-card__link {
        grid-template-columns: 1fr auto;
        grid-template-rows: auto auto;
        gap: var(--space-sm) var(--space-lg);
    }
    
    .pricing-card__header {
        grid-column: 1 / 2;
        grid-row: 1 / 2;
    }
    
    .pricing-card__number {
        display: none;
    }
    
    .pricing-card__price {
        grid-column: 2 / 3;
        grid-row: 1 / 2;
        min-width: auto;
    }
    
    .pricing-card__details {
        grid-column: 1 / -1;
        grid-row: 2 / 3;
        justify-self: start;
    }
    
    .pricing-card__features {
        gap: var(--space-sm);
        flex-wrap: wrap;
    }
    
    .pricing-card__arrow {
        display: none;
    }
    
    .pricing-card__link:hover {
        padding-left: var(--space-sm);
        padding-right: var(--space-sm);
    }
    
    .pricing-card__link:hover .pricing-card__title {
        transform: none;
    }
    
    /* FAQ */
    .faq-item__question {
        font-size: var(--text-base);
        padding: var(--space-md) 0;
    }
    
    /* CTA */
    .pricing-cta__link {
        font-size: clamp(1.5rem, 6vw, 2rem);
    }
    
}

@media (max-width: 480px) {
    
